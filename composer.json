{
    "name": "mkorkmaz/redislabs-redisgraph-php",
    "description": "PHP Client for Redislabs Redis Graph Module.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mehmet Korkmaz",
            "email": "mehmet@mkorkmaz.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.2",
        "mkorkmaz/redislabs-common": "^0.1",
        "sevenecks/tableify": "^0.0.5"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "roave/backward-compatibility-check": "^2.0",
        "codeception/codeception": "^2.5",
        "php-coveralls/php-coveralls": "^2.1",
        "squizlabs/php_codesniffer": "^3.3",
        "predis/predis": "^1.1",
        "ext-redis": "*",
        "phpstan/phpstan": "^0.10.6"
    },
    "suggest": {
        "predis/predis": "If your application depends on predis.",
        "ext-redis": "If your application depends of redis PCEL extention.",
        "mper/cypher-querybuilder": "A php query builder for cypher queries."
    },
    "autoload": {
        "psr-4": {
            "Redislabs\\Module\\RedisGraph\\": "src/RedisGraph"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "scripts": {
        "unit-tests": "vendor/bin/codecept run unit --coverage",
        "bc-check": "php -d memory_limit=2GB vendor/bin/roave-backward-compatibility-check",
        "phpstan": "vendor/bin/phpstan analyse -l 4 src",
        "phpcs": "vendor/bin/phpcs --standard=PSR2 src tests",
        "phpcbf": "vendor/bin/phpcbf --standard=PSR2 src tests",
        "phpcs-object-calisthenics": "vendor/bin/phpcs src -sp --standard=vendor/object-calisthenics/phpcs-calisthenics-rules/src/ObjectCalisthenics/ruleset.xml"
    }
}
